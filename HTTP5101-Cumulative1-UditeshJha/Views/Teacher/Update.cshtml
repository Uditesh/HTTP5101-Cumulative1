@model HTTP5101_Cumulative1_UditeshJha.Models.Teacher

@{
    ViewBag.Title = "Update";
}

<nav class="navlink">
    <a href="/Teacher/Show/@Model.TeacherId">Go Back</a>
</nav>
<h2>Update a Teacher!</h2>
<form action="/Teacher/Update/@Model.TeacherId" method="post" name="newForm"
      onsubmit="return FormProcess();">

    @* Client side validation try *@
    @*if(@ViewBag.Name != null)*@
        <div class="inputrow">
            <p id="errorMsg"></p>
        </div>
        <div class="inputrow">
            <label for="TeacherFname">First Name :</label>
            <input type="text" name="TeacherFname" id="TeacherFname" />
        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name :</label>
            <input type="text" name="TeacherLname" id="TeacherLname" />
        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">Employee Number :</label>
            <input type="text" name="EmployeeNumber" id="EmployeeNumber" />
        </div>
        <div class="inputrow">
            <label for="HireDate">Hire Date :</label>
            <p>@Model.HireDate</p>
        </div>
        <div class="inputrow">
            <label for="Salary">Salary :</label>
            <input type="number" name="Salary" id="Salary" step="any" />
        </div>
        <div>
            <input type="submit" value="Update Teacher" />
        </div>
</form>
<script>
    @* Validates wether fields have value or they are null.
        *@
    function FormProcess() {
        var errorMsg = document.getElementById("errorMsg");
        fname = document.getElementById('TeacherFname').value;
        lname = document.getElementById('TeacherLname').value;
        eNumber = document.getElementById('EmployeeNumber').value;
        salary = document.getElementById('Salary').value;
        if (!(fname)) {
            errorMsg.innerHTML = "Please enter first name!";
            return false;
        }
        if (!(lname)) {
            errorMsg.innerHTML = "Please enter last name!";
            return false;
        }

         if (!(salary)) {
             errorMsg.innerHTML = "Please enter salary!";
            return false;
        }
        if (!(eNumber)) {
            errorMsg.innerHTML = "Please enter employee number!";
            return false;
        }
    }
</script>

